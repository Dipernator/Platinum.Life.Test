@model Platinum.Life.Entities.PaymentRequisition

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form id="frm-create-payment-requisition" method="post">
    @Html.AntiForgeryToken()
    <!-- DepartmentId -->
    <label for="DepartmentId">DepartmentId</label><br />
    <input name="DepartmentId" type="text" /><br />

    <!-- DateOfInvoice -->
    <label for="DateOfInvoice">DateOfInvoice</label><br />
    <input name="DateOfInvoice" type="text" /><br />

    <!-- Description -->
    <label for="Description">Description</label><br />
    <input name="Description" type="text" /><br />

    <!-- BANKING DETAILS -->
    <!-- AccountNumber -->
    <label for="BankDetails.AccountNumber">AccountNumber</label><br />
    <input name="BankDetails.AccountNumber" type="text" /><br />

    <!-- AccountHolder -->
    <label for="BankDetails.AccountHolder">AccountHolder</label><br />
    <input name="BankDetails.AccountHolder" type="text" /><br />

    <!-- Bank -->
    <label for="Bank">Bank</label><br />
    <select name="Bank" id="Bank">
        <option value="Absa">Absa</option>
        <option value="FNB">FNB</option>
    </select><br />

    <!-- BranchCode -->
    <label for="BranchCode">BranchCode</label><br />
    <input name="BranchCode" type="text" /><br />

    <!-- BranchCode -->
    <label for="Attachment">Attachment</label><br />
    <input name="Attachment.Url" id="Attachment" class="form-control" type="file" />

    <!-- Button -->
    <button type="submit" value="Submit">Create</button>
</form>


















