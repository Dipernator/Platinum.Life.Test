@using Platinum.Life.Web2.Models
@model LoginUserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="u-clearfix u-sheet u-block-bf08-2">
    <div class="u-form u-login-control u-block-bf08-24">
        <form action="#" method="POST" class="u-clearfix u-form-custom-backend u-form-spacing-10 u-form-vertical u-inner-form" source="custom" name="form" style="padding: 10px;">
            <div class="u-form-group u-form-name u-block-bf08-25">
                <label for="username-a30d" class="u-label u-block-bf08-26">Username *</label>
                <input type="text" placeholder="Enter your Username" id="username-a30d" name="username" class="u-border-grey-30 u-input u-input-rectangle u-block-bf08-27" required="">
            </div>
            <div class="u-form-group u-form-password u-block-bf08-28">
                <label for="password-a30d" class="u-label u-block-bf08-29">Password *</label>
                <input type="text" placeholder="Enter your Password" id="password-a30d" name="password" class="u-border-grey-30 u-input u-input-rectangle u-block-bf08-30" required="">
            </div>
            <div class="u-form-checkbox u-form-group u-block-bf08-31">
                <input type="checkbox" id="checkbox-a30d" name="remember" value="On">
                <label for="checkbox-a30d" class="u-label u-block-bf08-32">Remember me</label>
            </div>
            <div class="u-align-left u-form-group u-form-submit u-block-bf08-33">
                <a href="#" class="u-btn u-btn-submit u-button-style u-block-bf08-34">Login</a>
                <input type="submit" value="submit" class="u-form-control-hidden">
            </div>
            <input type="hidden" value="" name="recaptchaResponse">


        </form>
    </div>
    <a href="#" class="u-border-1 u-border-active-palette-2-base u-border-hover-palette-1-base u-btn u-button-style u-login-control u-login-forgot-password u-none u-text-palette-1-base u-block-bf08-21">Forgot password?</a>
    <a href="#" class="u-border-1 u-border-active-palette-2-base u-border-hover-palette-1-base u-btn u-button-style u-login-control u-login-create-account u-none u-text-palette-1-base u-block-bf08-23">Don't have an account?</a>
</div>

<h2>Login</h2>

<form id="frm-login" method="post">
    @Html.AntiForgeryToken()
    <label for="Email">Email</label><br />
    <input name="Email" type="email" /><br />

    <label for="Password">Password</label><br />
    <input name="Password" type="password" /><br />

    <button type="submit" value="Submit">Login</button>
</form>