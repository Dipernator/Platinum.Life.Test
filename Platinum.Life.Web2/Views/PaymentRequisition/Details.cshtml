@model Platinum.Life.Entities.PaymentRequisition

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="u-form u-form-1">
    <h1>Payment Requisition</h1>
    <form id="frm-create-payment-requisition" method="POST" class="u-clearfix u-form-spacing-20 u-form-vertical u-inner-form" style="padding: 0;" source="custom" name="form">
        @Html.AntiForgeryToken()
        <!-- Id -->
        <input name="Id" type="hidden" value="@Html.DisplayFor(model => model.Id)" /><br />

        <!-- DepartmentId -->
        <label for="DepartmentId">Department</label><br />
        <input name="DepartmentId" type="text" value="@Html.DisplayFor(model => model.DepartmentId)" />

        <!-- DateOfInvoice -->
        <label for="DateOfInvoice">Date Of Invoice</label><br />
        <input name="DateOfInvoice" class="datepicker" type="text" value="@Html.DisplayFor(model => model.DateOfInvoice)" />

        <!-- Description -->
        <label for="Description">Description</label><br />
        <input name="Description" type="text" value="@Html.DisplayFor(model => model.Description)" /><br />

        <!--  BANKING DETAILS -->
        @*<div>*@
        <!-- Bank Id -->
        <input name="BankDetails.Id" type="hidden" value="@Html.DisplayFor(model => model.BankDetails.Id)" /><br />

        <!-- AccountHolder -->
        <label for="BankDetails.AccountNumber">Account Number</label><br />
        <input name="BankDetails.AccountNumber" type="text" value="@Html.DisplayFor(model => model.BankDetails.AccountNumber)" /><br />

        <!-- AccountHolder -->
        <label for="BankDetails.AccountHolder">Account Holder</label><br />
        <input name="BankDetails.AccountHolder" type="text" value="@Html.DisplayFor(model => model.BankDetails.AccountHolder)" /><br />

        <!-- Bank Name -->
        <label for="BankDetails.Bank">Bank</label><br />
        <select name="BankDetails.Bank" id="Bank">
            <option value="Absa">Absa</option>
            <option value="FNB">FNB</option>
            <option value="Capitec">Capitec</option>
            <option value="FNB">Nedbank</option>
        </select><br />

        <!-- BranchCode -->
        <label for="BranchCode">Branch Code</label><br />
        <input name="BankDetails.BranchCode" type="text" value="@Html.DisplayFor(model => model.BankDetails.BranchCode)" /><br />

        <!-- Attachment -->
        <label for="Attachment">Attachment</label><br />
        <input name="Attachment.Url" id="Attachment" class="form-control" type="file" />
        @*</div>*@

        <!-- Button -->
        <div class="u-align-center u-form-group u-form-submit u-form-group-5">
            <a href="#" class="u-active-grey-90 u-border-none u-btn u-btn-submit u-button-style u-hover-grey-90 u-palette-1-base u-btn-1">Sign Up</a>
            <input type="submit" value="submit" class="u-form-control-hidden">
        </div>
        @*<div class="u-form-send-message u-form-send-success"> Thank you! Your message has been sent. </div>
        <div class="u-form-send-error u-form-send-message"> Unable to send your message. Please fix errors then try again. </div>*@
    </form>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
    @if (User.IsInRole("Admin"))
    {
        <span>@Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |</span>
        <span>@Html.ActionLink("Sign", "PrintPartialViewToPdf", new { paymentRequisitionId = Model.Id })</span>
    }
</p>
