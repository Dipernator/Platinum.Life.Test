@model IEnumerable<Platinum.Life.Entities.PaymentRequisition>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-header">Payment Requisition</h2>

@*https://divtable.com/table-styler/*@
<div class="row">
    <div class="col-md-12">
        <table class="tblPlatinumLife">
            <thead>
                <tr>
                    <th>Department</th>
                    <th>Create Date</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>
                        View
                    </th>
                    <th>
                        Sight
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DepartmentId)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.StatusId)</td>
                        <td>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-file" })</td>
                        @{
                            if (User.IsInRole("Admin"))
                            {
                                <td>@Html.ActionLink("Sign", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Table style -->
<style>
    table.tblPlatinumLife {
        border: 1px solid #1C6EA4;
        background-color: #EEEEEE;
        width: 100%;
        text-align: left;
        border-collapse: collapse;
    }

        table.tblPlatinumLife td, table.tblPlatinumLife th {
            border: 1px solid #AAAAAA;
            padding: 3px 2px;
        }

        table.tblPlatinumLife tbody td {
            font-size: 13px;
        }

        table.tblPlatinumLife thead {
            background: #0E3550;
            border-bottom: 2px solid #444444;
        }

            table.tblPlatinumLife thead th {
                font-size: 15px;
                font-weight: normal;
                color: #FFFFFF;
                text-align: center;
                border-left: 2px solid #D0E4F5;
            }

                table.tblPlatinumLife thead th:first-child {
                    border-left: none;
                }

        table.tblPlatinumLife tfoot {
            font-size: 14px;
            font-weight: bold;
            color: #FFFFFF;
            background: #D0E4F5;
            background: -moz-linear-gradient(top, #dcebf7 0%, #d4e6f6 66%, #D0E4F5 100%);
            background: -webkit-linear-gradient(top, #dcebf7 0%, #d4e6f6 66%, #D0E4F5 100%);
            background: linear-gradient(to bottom, #dcebf7 0%, #d4e6f6 66%, #D0E4F5 100%);
        }

            table.tblPlatinumLife tfoot td {
                font-size: 14px;
            }

            table.tblPlatinumLife tfoot .links {
                text-align: right;
            }

                table.tblPlatinumLife tfoot .links a {
                    display: inline-block;
                    background: #1C6EA4;
                    color: #FFFFFF;
                    padding: 2px 8px;
                    border-radius: 5px;
                }
</style>
