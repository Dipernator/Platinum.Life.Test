@model IEnumerable<Platinum.Life.Entities.PaymentRequisition>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/PaymentRequisition/Create" Index class="Button">
    <div class="row">
        <h3 style="background-color: #46dc46; color: white; text-align: center; padding: 5px 0 5px 0; text-decoration: none;">Create New Payment Requisition</h3>
    </div>
</a>

<section class="u-align-center u-clearfix u-section-2" id="sec-be62">
    <div class="    ">
        <div class="u-expanded-width u-table u-table-responsive u-table-1">
            <table class="u-table-entity u-table-entity-1">
                <thead>
                    <tr>
                        <th>
                            DepartmentId
                        </th>
                        <th>
                            Date Of Invoice
                        </th>
                        <th>
                            Create Date
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Status Id
                        </th>
                        <th>
                            CreateDateTime
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="u-table-alt-palette-1-light-3 u-table-body">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfInvoice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDateTime)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                                @if (User.IsInRole("Admin"))
                                {
                                    @*<span>@Html.ActionLink("Delete", "Delete", new { id = item.Id }) |</span>*@
                                    <span>@Html.ActionLink("Sign Off", "Details", new { id = item.Id })</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


